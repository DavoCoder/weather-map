<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="${wm.datasource.driver}" />
		<property name="url" value="${wm.datasource.url}" />
		<property name="username" value="${wm.datasource.username}" />
		<property name="password" value="${wm.datasource.password}" />
		<property name="initialSize" value="${wm.datasource.initialSize}" />
		<property name="maxActive" value="${wm.datasource.maxActive}" />
	</bean>
	
</beans>